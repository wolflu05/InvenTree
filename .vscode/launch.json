  "version": "0.2.0",
  "configurations": [
    {
      "name": "InvenTree Server",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/InvenTree/manage.py",
      "args": ["runserver"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "InvenTree Server - 3rd party",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/InvenTree/manage.py",
      "args": ["runserver"],
      "django": true,
      "justMyCode": false
    },
    {
      "name": "InvenTree Frontend - Vite",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src/frontend"
    }
  ]
}
